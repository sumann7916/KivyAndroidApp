WindowManager:
    MenuWindow:
    DownloadManager:

<MenuWindow>:
    name: 'main'

    url: url
    video: video
    audio: audio
    downloadbtn: downloadbtn
    audiocheck: audiocheck
    videocheck: videocheck
   
    canvas:
        Rectangle:
            source: "images/background4.png"
            pos: self.pos
            size: self.size

    FloatLayout:
        TextInput:
            id: url
            pos_hint: {'x': .1, 'y': .8}
            size_hint: .8, .1
            multiline: False
            hint_text: "Paste Your URL here"
            font_size: 40
            border: (50,50,50,50)
        PasteButton:
            source: 'images/Paste.png'
            pos_hint: {'x': .3, 'y': .6}
            size_hint: .4, .1
            on_release:
                root.paste()

        Label:
            text: 'Audio'
            pos_hint: {'x': .1, 'y': .3}
            size_hint: .4, .1
            font_size: 30

        AudioButton:
            id: audio
            source: root.audioimg
            pos_hint: {'x': .1, 'y': .4}
            size_hint: .4, .1

        Label:
            text: 'Video'
            pos_hint: {'x': .5, 'y': .3}
            size_hint: .4, .1
            font_size: 30
        VideoButton:
            id: video
            source: root.videoimg
            pos_hint: {'x': .5, 'y': .4}
            size_hint: .4, .1
        
            
                
        DownloadButton:
            id: downloadbtn
            source: 'images/arrows.png'
            pos_hint: {'x': .28, 'y': .1}
            size_hint: .45, .2
            on_press:
                root.dpopup.open()
            on_release:
                root.download()
                    
	CheckBox:
	    id: audiocheck
	    color: [0,255,0,1]
	    pos_hint: {'x': .1, 'y': .4}
	    size_hint: .4, .1
	CheckBox:
	    id: videocheck
	    color: [0,255,0,1]
	    pos_hint: {'x': .5, 'y': .4}
	    size_hint: .4, .1
	    


	    
